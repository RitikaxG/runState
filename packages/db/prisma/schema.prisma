generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id String @id @default(uuid())
  role Role
  email String @unique
  password String 
  createdAt DateTime @default(now())

  websites Website[]
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id String @id @default(uuid())
  userId String 
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked Boolean @default(false)
  tokenHash String @unique

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
 
}

model Website {
  id        String @id @default(uuid())
  url       String 
  timeAdded DateTime @default(now())
  userId    String
  ticks     WebsiteTicks[] // 1-M ( 1 website many ticks )
  user      User @relation(fields: [userId], references: [id])

  @@unique([userId,url])
}

model Region {
  id     String @id @default(uuid())
  name   String

  ticks  WebsiteTicks[]  // 1-M
}

enum WebsiteStatus {
  up
  down
  unknown
}

model WebsiteTicks {
  id               String @id @default(uuid())
  websiteId        String
  regionId         String
  status           WebsiteStatus
  responseTimeMs   Int
  createdAt        DateTime @default(now())

  website          Website @relation(fields: [websiteId], references: [id])
  region           Region   @relation(fields: [regionId], references: [id])

  @@index([websiteId])
  @@index([regionId])
  @@index([createdAt])
}
